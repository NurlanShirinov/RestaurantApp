<Window x:Class="RestaurantApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestaurantApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStyle="None" WindowStartupLocation="CenterScreen" AllowsTransparency="True" Background="Transparent">
    <Border CornerRadius="20" BorderThickness="3" Background="#F4F0E8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="3*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Canvas Grid.Row="0">
                    <ComboBox Name="MyComboBox"
                              Width="150" 
                              Height="35"
                              Background="Beige" 
                              BorderThickness="5" 
                              Canvas.Top="30" 
                              Canvas.Left="300"
                              ItemsSource="{Binding Beers }"
                              DisplayMemberPath="Name">
                </ComboBox>
                <Image Width="100"
                       Height="70"
                       Canvas.Left="10" 
                       Canvas.Top="5"
                       Source="/Images/p2.png">
                    
                </Image>
                <Image Width="100"
                       Height="70"
                       Canvas.Left="130" 
                       Canvas.Top="5"
                       Source="/Images/p3.png">
                </Image>
                
                <Image Width="100"
                       Height="70"
                       Canvas.Right="200" 
                       Canvas.Top="5"
                       Source="/Images/p4.png">
                </Image>
                <Image Width="100"
                       Height="70"
                       Canvas.Right="70" 
                       Canvas.Top="5"
                       Source="/Images/p1.png">
                </Image>



            </Canvas>
        </Grid>
    </Border>

</Window>
